<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :time %>
    <%= form.datetime_select :time %>
  </div>

<% if match.persisted? %>
  <div class="field">
    <%= form.label :score %>
    <%= form.text_field :score %>
  </div>
<% end %>

  <div class="field">
    <%= form.label :players %>
    <%= form.collection_select :player_ids, Player.all, :id, :full_name, {}, multiple: true, size: 10 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
